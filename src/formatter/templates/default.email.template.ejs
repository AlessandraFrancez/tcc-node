<mjml>
  <mj-head>
    <mj-attributes>
      <mj-body width="800px" />
      <mj-section padding="0" /><!-- full-width="full-width" -->
      <mj-wrapper /><!-- full-width="full-width" -->
      <mj-text padding="0" font-size="12px" />
      <mj-button font-size="12px" />
      <mj-all font-family="Helvetica" />
      <mj-title>MONITORAMENTO </mj-title>
    </mj-attributes>
  </mj-head>
  <mj-body>
    <mj-section background-color="#414142">
      <mj-column>
        <mj-text font-style="bold" padding="0px" align="center" color="#ffffff">
          <h1>MONITORAMENTO</h1>
          <p>Executado em: <%= timeProcessed %></p>
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section padding-bottom="15px">
      <mj-column>
        <mj-text padding-top="20px" font-size="12px" font-family="Helvetica">
          <h2>Status</h2>
        </mj-text>
      </mj-column>
    </mj-section>
    <mj-section>
      <mj-body>
        <mj-wrapper padding="10px 10px" background-color="#d9d9d9">
          <mj-section padding-top="20px" padding-left="20px">
            <mj-group>
              <mj-column>
                <mj-text text-transform="uppercase" align="left">
                  <p>Legendas: </p>
                </mj-text>
              </mj-column>
            </mj-group>
          </mj-section>
          <mj-section padding-top="10px" padding-left="20px">
            <mj-group>
              <mj-column>
                <mj-button background-color="#228B22" color="white" width="92px" font-size="11px">STATUS OK</mj-button>
              </mj-column>
              <mj-column>
                <mj-button background-color="#f2c40d" color="black" width="92px" font-size="11px">STATUS ALERTA
                </mj-button>
              </mj-column>
              <mj-column>
                <mj-button background-color="#B22222" color="white" width="92px" font-size="11px">STATUS CRITICO
                </mj-button>
              </mj-column>
            </mj-group>
          </mj-section>
          <% for (test of testResults) { %>
          <mj-section padding="0">
            <mj-group>
              <mj-column width="20%">
                <% if (test.Status == 'NOK') {%>
                <mj-button background-color="#B22222" color="white" width="40px" height="20px" inner-padding="2px"
                  font-family="Arial" font-size="12px">NOK</mj-button>
                <% } else { %>
                <mj-button background-color="#228B22" color="white" width="40px" height="20px" inner-padding="2px"
                  font-family="Arial" font-size="12px">OK</mj-button>
                <% } %>
              </mj-column>
              <mj-column width="80%">
                <mj-text text-transform="uppercase" align="left" padding-top="3px" padding-left="5px"
                  letter-spacing="1px" font-weight="10" font-size="12px">
                  <p><%= test.Name %></p>
                </mj-text>
              </mj-column>
            </mj-group>
          </mj-section>
          <% } %>
        </mj-wrapper>
      </mj-body>
    </mj-section>
    <mj-section padding-bottom="25px" padding-top="25px">
      <mj-column>
        <mj-text padding-top="20px" font-size="12px" font-family="Helvetica">
          <h2>INFORMAÇÕES ADICIONAIS</h2>
        </mj-text>
      </mj-column>
    </mj-section>
    <% for (test of testResults){%>
    <mj-section>
      <mj-body>
        <mj-wrapper background-color="#d9d9d9" padding-top="10px" padding-bottom="15px" padding-right="20px">
          <mj-section>
            <mj-group vertical-align="middle">
              <mj-column width="15%">
                <% if (test.Status == 'NOK') { %>
                <mj-button background-color="#B22222" color="white" width="40px" height="20px" inner-padding="2px"
                  font-family="Arial" font-size="12px">NOK</mj-button>
                <% } else { %>
                <mj-button background-color="#228B22" color="white" width="40px" height="20px" inner-padding="2px"
                  font-family="Arial" font-size="12px">OK</mj-button>
                <% } %>
              </mj-column>
              <mj-column width="85%">
                <mj-text text-transform="uppercase" font-size="12px">
                  <h4><%= test.Name %></h4>
                </mj-text>
              </mj-column>
            </mj-group>
          </mj-section>
          <mj-section>
            <mj-column>
              <mj-divider border-width="2px" border-style="dotted" border-color="lightgrey" padding="10px" />
            </mj-column>
          </mj-section>
          <mj-section padding-left="10px">
            <mj-group>
              <mj-column>
                <mj-text text-transform="uppercase" align="left" color="black" text-decoration="underline"
                  font-weight="200" font-size="11px">
                  <p>Descrição</p>
                </mj-text>
              </mj-column>
            </mj-group>
          </mj-section>
          <mj-section padding-left="40px" padding-right="30px">
            <mj-group>
              <mj-column>
                <mj-text align="justify">
                  <p><%= test.Description %></p>
                </mj-text>
              </mj-column>
            </mj-group>
          </mj-section>
        </mj-wrapper>
      </mj-body>
    </mj-section>
    <mj-section>
      <mj-column>
        <mj-text>
          <h1>&emsp; &ensp;</h1>
        </mj-text>
      </mj-column>
    </mj-section>
    <% } %>
  </mj-body>
</mjml>